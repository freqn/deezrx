<section>
  <ul class="grid">
    <h2>Orders</h2>
    <%= link "New order", to: order_path(@conn, :new), class: "button button-primary" %>
    <%= for order <- @orders do %>
      <li>
        <div>
         <%= link to: order_path(@conn, :show, order.id) do %>
            <h2><%= order.id %></h2>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>